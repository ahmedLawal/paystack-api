  "dependencies": {
    "axios": "^1.7.3"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.25",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
